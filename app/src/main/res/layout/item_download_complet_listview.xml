<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_downloaded_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123-123-123"
                android:textSize="15sp"
                android:textColor="#000000"
                />


            <TextView
                android:id="@+id/tv_downloaded_item_filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="172.25MB"
                android:textSize="11sp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_below="@+id/tv_downloaded_item_name"
                />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_downloaded_item_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#2774F4"
            android:text="查看"
            android:textSize="11sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/view_downloaded_item_div"
            android:layout_centerVertical="true"

            />

        <View
            android:id="@+id/view_downloaded_item_div"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#CCCCCC"
            android:layout_toLeftOf="@+id/tv_downloaded_item_delete"/>


        <TextView
            android:id="@+id/tv_downloaded_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#2774F4"
            android:text="删除"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:paddingRight="13dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



</RelativeLayout>